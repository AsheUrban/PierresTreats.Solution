@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<div class="container">
  <h2 class="text-center my-4">Are you sure you want to delete this flavor?</h2>

  <div class="d-flex flex-column align-items-center">
    <p><strong>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</strong></p>
    @using (Html.BeginForm())
    {
      <input type="submit" value="Delete" />
    }
  </div>
  <div class="d-flex flex-row justify-content-center my-4">
    <p>@Html.ActionLink("Back to Flavors", "Index", "Flavors")</p> 
  </div>
</div>